# terminal emulator
super + Return
	st

# program launcher
super + space
	dmenu_run

# restart bspwm and make sxhkd reload its configuration files
ctrl + alt + Delete
  bspc wm -r; pkill -USR1 -x sxhkd
  
# close and kill
super + {w,q}
  bspc node -{c,k}

# set the window state
super + {t,shift + t,s,f}
	bspc node -t \~{tiled,pseudo_tiled,floating,fullscreen}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the last node/desktop
{alt,super} + {_,shift} + Tab
  bspc {node,desktop} -f {next,prev}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# go forward or backward with the mouse buttons
{button8,button9}
	xvkbd -sendevent -text {"\[XF86Back]","\[XF86Forward]"}

# control the volume levels
{XF86AudioMute,XF86AudioLowerVolume,XF86AudioRaiseVolume}
  pamixer-notify {-t,-d 5, -i 5}

{XF86AudioPrev,XF86AudioPlay,XF86AudioNext}
  playerctl --player=spotify,firefox,discord,%any {previous,play-pause,next}
  
# take a screenshot
{_,super} + Print
  scrot {-z,-z -s -f} $HOME/Pictures/Screenshots/%Y-%m-%d-%H%M%S.png

# take a screenshot and copy it
super + shift + Print
  scrot -s -f -o "/tmp/image.png" && xclip -selection clipboard -t image/png -i /tmp/image.png
